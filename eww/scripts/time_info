#!/bin/sh

case $1 in
    "--hour")
        date "+%I"
        ;;
    "--minutes")
        date "+%M"
        ;;
    "--type")
        date "+%p"
        ;;
    "--date")
        date "+ %a, %b %d"
        ;;
    "--day")
        date "+%d"
        ;;
    "--month")
        date "+%-m"
        ;;
    "--year")
        date "+%y"
        ;;
    *)
        true
        ;;
esac

