  `Notenschluesselid` int,
  `SomiNoteGewichtungProzent` int,
  `KlausurNoteGewichtungProzent` int
);

CREATE TABLE `Account` (
  `Accountid` int PRIMARY KEY AUTO_INCREMENT,
  `Benutzername` varchar(255),
  `Password` varchar(255)
);

CREATE TABLE `Person` (
  `Personid` int PRIMARY KEY AUTO_INCREMENT,
  `Accountid` int,
  `Vorname` varchar(255),
  `Nachname` varchar(255),
  `Geschlecht` char
);

CREATE TABLE `Note` (
  `Noteid` int,
  `NotenTypid` int,
  `Kursid` int,
  `Schuelerid` int,
  `NoteInProzent` int,
  `erstesHalbjahr` bool,
  `zweitesHalbjahr` bool
);

CREATE TABLE `NotenTyp` (
  `NotenTypid` int,
  `Bezeichnung` varchar(255),
);


