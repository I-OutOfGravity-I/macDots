  `Schuelerid` int PRIMARY KEY AUTO_INCREMENT,
  `Personid` int,
  `Klasseid` int
);

CREATE TABLE `Klasse` (
  `Klasseid` int PRIMARY KEY AUTO_INCREMENT,
  `Jahrgang` int,
  `Name` varchar(255)
);

